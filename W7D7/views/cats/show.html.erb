<h1> <%= @cat.name %> </h1>

<div>
  <table>
    <tr>
      <th>Traits</th>
      <th> </th>
    </tr>
    <tr>
      <td>Color </td>
      <td><%= @cat.color %> </td>
    </tr>
    <tr>
      <td>Date of Birth </td>
      <td><%= @cat.birth_date %> </td>
    </tr>
      <td>Sex </td>
      <td><%= @cat.sex %> </td>
    <tr>
      <td>Description </td>
      <td><%= @cat.description %> </td>
    </tr>
  </table>

  <br>

  <table>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>
    <% @crr.each do |crr| %>
      <tr>
        <td> <%= crr.start_date %> </td>
        <td> <%= crr.end_date  %> </td>
        <td> <%= crr.status %> </td>
        <td>
        <% if crr.pending? %>
          <form action="<%= approve_cat_rental_request_url(crr) %>"  method ="post">
            <input type ="submit" value="Approve Request">
          </form>
          <form action="<%= deny_cat_rental_request_url(crr) %>"  method ="post">
            <input type ="submit" value="Deny Request">
          </form>
        <% else %>
          <%= crr.status %>
        <% end %>
        </td>
      </tr>
    <% end %>
  <table>
</div>
