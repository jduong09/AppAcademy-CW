<h1>Submit a cat rental request!</h1>

<br>

<form action="<%= cat_rental_requests_url %>" method="post">

  <label for="cat_name">Choose a cat:</label>
  <select id="cat_name" name="cat_rental_request[cat_id]">
    <option disabled selected>--Please Select Option--</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"> <%= cat.name %> </option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start Date:</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]">

  <br>

  <label for="end_date">End Date: </label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]">

  <br>

  <input type="submit" value="Create Rental Request!">
</form>
