<h1><%= @user.username %> Goals!</h1>

<ul>
<% @goals.each do |goal| %>
  <li><%= goal.name %></li>
  <li>
    <form action="<%= goal_url %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="submit" value="Delete <%= goal.name %> Goal">
    </form>
  </li>
<% end %>
</ul>