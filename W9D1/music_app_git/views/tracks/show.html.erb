<h2><%= @track.title %></h2>

<p> This is your track show page! </p>

<%= render "notes/note" %>

<form action="<%= edit_track_url(@track) %>" method="GET">
  <input 
    type="hidden"
    name="authenticity_token"
    value="<%=form_authenticity_token%>">
  
  <input type="submit" value="Edit Track">
</form>

<form action="<%= track_url(@track) %>" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input 
    type="hidden"
    name="authenticity_token"
    value="<%=form_authenticity_token%>">

  <input type="submit" value="Delete Track">
</form>

<form action="<%= new_track_note_url(@track) %>" method="GET">
  <input 
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <input type="submit" value="Add Note">
</form>